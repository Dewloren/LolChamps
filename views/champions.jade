extends layout

block content
  .row
  - for (var i = 0; i < champs.length / 12; i++)
    .row
      - for (var j = 0; j < 12; j++)
        - var index = i * 12 + j
          if (index < champs.length)
            .col.s1.center-align(data-name="#{champs[index].name}" data-type="sprites")
              a(href="/pages/champ/#{champs[index].name}")
                img(src="//ddragon.leagueoflegends.com/cdn/#{version}/img/champion/#{champs[index].key}.png" width="100%")
                span#name(style="font-size:12px")
block js
  script(src="/js/champions.js")